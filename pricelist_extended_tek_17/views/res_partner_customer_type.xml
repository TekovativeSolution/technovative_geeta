<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="menu_customer_type_root" name="Customer Types"
              parent="contacts.res_partner_menu_config"
              sequence="10"/>

    <!-- Action for Customer Types -->
    <record id="action_customer_type" model="ir.actions.act_window">
        <field name="name">Customer Types</field>
        <field name="res_model">res.partner.customer.type</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_customer_type"
              name="Customer Types"
              parent="menu_customer_type_root"
              action="action_customer_type"/>

    <!-- Tree View -->
    <record id="view_customer_type_tree" model="ir.ui.view">
        <field name="name">res.partner.customer.type.tree</field>
        <field name="model">res.partner.customer.type</field>
        <field name="arch" type="xml">
            <tree  editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>